{
  "manifest_version": 3,
  "name": "Text Collector",
  "version": "1.0.0",
  "description": "Collect and manage highlighted text from any webpage",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Text Collector",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["manager.html", "manager.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
